<html>
    <head>
        <link href="https://fonts.googleapis.com/css2?family=Amaranth:ital,wght@1,700&family=Lusitana&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link href="/styles.css" rel="stylesheet">
    </head>
    <body>
        <h1>Live Weather</h1>
        <form action="/" method="POST">
                <center>
                    <div class="response">
                        <div class="form-group">
                            <input type="text" name="txt" class="form-control input-group" placeholder="Enter Location" autocomplete="off">
                            <input type="submit" class="btn btn-primary btn-block input-group" value="Know Weather">
                        </div>
                    </div>
                </center>
        </form>
        <div>
            <h3><%= name %></h3>
            <h3><%= temp %><%= symb %>&nbsp;&nbsp;</h3>
            <h3><%= desc %></h3>
            <img src="<%= imgurl %> ">
        </div>
    </body>
</html>